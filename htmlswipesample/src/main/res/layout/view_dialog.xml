<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancle"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원어민"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="13dp"
                />

            <Button
                android:id="@+id/btn_native_play"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/btn_play"
                />
        </LinearLayout>

        <com.hy.htmlswipesample.view.WaveformView
            android:id="@+id/waveform_native"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_gravity="left"

            android:layout_marginRight="15dp"
            android:background="@color/primary_text_default_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="원어민(테스트)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="9dp"
                />

            <Button
                android:id="@+id/btn_test_play"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/btn_play"
                />
        </LinearLayout>

        <com.hy.htmlswipesample.view.WaveformView2
            android:id="@+id/waveform_test"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_gravity="left"

            android:layout_marginRight="15dp"
            android:background="@color/primary_text_default_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="13dp"
                />

            <Button
                android:id="@+id/btn_me_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_play"/>
        </LinearLayout>

        <com.hy.htmlswipesample.view.WaveformView
            android:id="@+id/waveform_me"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:background="@color/primary_text_default_material_dark"/>
    </LinearLayout>

</LinearLayout>
